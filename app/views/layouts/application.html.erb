<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- Navigation bar begin -->
<div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
  <div class="container">
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to('Blog', articles_path) %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
            <li><%= link_to(current_user.username, edit_user_registration_path) %></li>
            <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
        <% else %>
            <li><%= link_to('Sign In', new_user_session_path) %></li>
            <li><%= link_to('Register', new_user_registration_path) %></li>
        <% end %>
      </ul>
    </div><!-- /.nav-collapse -->
  </div><!-- /.container -->
</div><!-- /.navbar -->
<!-- Navigation bar end -->
<div class="container container_margin">
  <% if notice %>
      <div class="container alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <p id="notice"><%= notice %></p>
      </div>
  <% end %>

    <%= yield %>
</div>
</body>
</html>
